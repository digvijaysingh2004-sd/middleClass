<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="">
    <link href="~/Areas/Admin/assets/css/all-fontawesome.min.css" rel="stylesheet" />
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Content/css/main.css">
</head>
<body>

    <header class="header-area header-style-1 header-height-2">
        @Html.Partial("Header")
    </header>

    <div class="mobile-header-active mobile-header-wrapper-style">
        @Html.Partial("Mobile")
    </div>

    <main class="main">
        @RenderBody()
    </main>

    <footer class="main">
        @Html.Partial("Footer")
    </footer>

    <button id="backToTop" title="Go to top">
        <i class="fa-light fa-chevron-up"></i>
    </button>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var backToTopButton = document.getElementById("backToTop");

            window.addEventListener("scroll", function () {
                if (window.scrollY > 200) {
                    // Show button when scrolling down past 200px
                    backToTopButton.style.display = "block";
                } else {
                    // Hide button when near the top
                    backToTopButton.style.display = "none";
                }
            });

            backToTopButton.addEventListener("click", function () {
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
        });


    </script>
    <!-- Vendor JS-->
    <script src="~/Content/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="~/Content/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="~/Content/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/plugins/slick.js"></script>
    <script src="~/Content/js/plugins/jquery.syotimer.min.js"></script>
    <script src="~/Content/js/plugins/wow.js"></script>
    <script src="~/Content/js/plugins/jquery-ui.js"></script>
    <script src="~/Content/js/plugins/perfect-scrollbar.js"></script>
    <script src="~/Content/js/plugins/magnific-popup.js"></script>
    <script src="~/Content/js/plugins/select2.min.js"></script>
    <script src="~/Content/js/plugins/waypoints.js"></script>
    <script src="~/Content/js/plugins/counterup.js"></script>
    <script src="~/Content/js/plugins/jquery.countdown.min.js"></script>
    <script src="~/Content/js/plugins/images-loaded.js"></script>
    <script src="~/Content/js/plugins/isotope.js"></script>
    <script src="~/Content/js/plugins/scrollup.js"></script>
    <script src="~/Content/js/plugins/jquery.vticker-min.js"></script>

    <!-- Template  JS -->
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/js/shop.js"></script>
</body>
</html>
